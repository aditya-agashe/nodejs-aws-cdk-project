{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "lib": [
      "es2019",
      "dom"
    ],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    // "typeRoots": [
    //   "./node_modules/@types",
    //   "./src/types"
    // ],
    
  },
  "include": ["src/**/*", "src/types/global.d.ts"],
  "exclude": [
    "node_modules",
    "cdk.out",
    "src/**/*.test.*"
  ],
}
